{
  "includes": ["src/global.d.ts", "src/**.ts", "example/**.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "es6",
    "target": "ES6",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": false,
    "lib": ["ESNext", "dom", "dom.iterable", "scripthost"],
},
  "types": [
    // "vite/client"
    "webpack-env"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/*.ts",
    "packages/utils/index.ts"
  ],
  "paths": {
    "@/*": ["src/*"]
  }
}
