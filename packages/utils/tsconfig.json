{
  "includes": ["src/global.d.ts","src/**.ts","example/**.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "es6",
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitThis": false,
  },
  "types":[
    // "vite/client"
    "webpack-env",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/*.ts", "packages/utils/index.ts",
  ],
  "paths": {
    "@/*": [
      "src/*"
    ]
  }
}
